<%= form_for(@daily_collections, html: {class: 'form col-md-6 col-md-offset-3'}) do |f| %>
    <div class="fieldset">
      <div class="form-group">
        <%= f.label :user_id %><br>
        <%= collection_select(:entry, :user_id, @users, :id, :username, class: 'form-control')%>
      </div>
      <div class="form-group">
        <%= f.label :amount %><br>
        <%= f.text_field :amount %>
      </div>
      <script>
          $(function() {
              $('.datepicker').datepicker({
                  format: 'dd-mm-yyyy',
                  orientation: "top right",
                  todayHighlight: false,
                  autoclose: true});
          });

      </script>
      <div class="form-group">
        <%= f.label :entry_date %><br>
        <%= f.text_field :collection_date, :class => 'datepicker', :value => Date.today.strftime('%d-%m-%Y') %><br/>


      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
<% end %>
