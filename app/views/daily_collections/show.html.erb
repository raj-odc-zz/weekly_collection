<h1>Listing loans</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Customer</th>
      <th>Order no</th>
      <th>Balance amount</th>
      <th>Today's Amount</th>
      <th>Today's Amount</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @loans.each do |loan| %>
        <tr>
          <td><%= loan.customer.name_location %></td>
          <td><%= loan.order_no %></td>
          <td><%= loan.balance_amount %></td>
          <td><%= loan.active_status %></td>
          <td><%= link_to 'Show', loan %></td>
          <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
          <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>