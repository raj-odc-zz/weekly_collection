<script>
    $(document).ready(function() {
        jQuery(".best_in_place").best_in_place();
    });
</script>
<h1>Listing daily_collections</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
  <tr>
    <th>Customer</th>
    <th>Order no</th>
    <th>Given date</th>
    <th>Loan amount</th>
    <th>Paid amount</th>
    <th>Installments Paid</th>
    <th>Balance amount</th>
    <th>Todays Amount</th>
    <th colspan="3"></th>
  </tr>
  </thead>


  <tbody>
    <% @daily_collections.each do |daily_collection| %>
      <tr>
        <td><%= daily_collection.loan.customer.name_location %></td>
        <td><%= daily_collection.loan.order_no %></td>
        <td><%= daily_collection.loan.given_date %></td>
        <td><%= daily_collection.loan.loan_amount %></td>
        <td><%= daily_collection.loan.paid_amount %></td>
        <td><%= daily_collection.loan.installments %></td>
        <td><%= daily_collection.loan.balance_amount %></td>
        <td><%= best_in_place daily_collection, :amount, tabindex: "1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>

<br>

<%= link_to 'New Daily collection', new_daily_collection_path %>
