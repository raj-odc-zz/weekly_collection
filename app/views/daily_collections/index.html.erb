<h1>Listing daily_collections</h1>

<table>
  <thead>
    <tr>
      <th>Loan</th>
      <th>Amount</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_collections.each do |daily_collection| %>
      <tr>
        <td><%= daily_collection.loan %></td>
        <td><%= daily_collection.amount %></td>
        <td><%= daily_collection.user %></td>
        <td><%= link_to 'Show', daily_collection %></td>
        <td><%= link_to 'Edit', edit_daily_collection_path(daily_collection) %></td>
        <td><%= link_to 'Destroy', daily_collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

