<h1>Customers</h1>

<%= form_tag(customers_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search_name, params[:search_name], placeholder: "Search Customers with Name" %>
    <%= text_field_tag :search_location, params[:search_location], placeholder: "Search Customers with Location" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
<div class="table-responsive">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Mobile number</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.location %></td>
        <td><%= customer.mobile_number %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.email_id %></td>
        <td><%= customer.address %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Customer', new_customer_path %>
